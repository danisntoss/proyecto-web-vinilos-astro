---
const { img, title } = Astro.props;
---

<section>
  <div class="image">
    <img src={img} alt="" />
</div>
<div class="content">
  <h1>{title}</h1>
</div>
</section>

<style>
    

  section {
    padding: 20px;
    background-color: #f4f4f4;
    border-radius: 15px;
    height: 450px;
    width: 45%;
    display: flex;
    flex-direction: column;

  }
  .image{
    height: 90%;
    width:100%;
  }
  img {
    object-fit:cover;
    border-radius: 15px;
    height: 100%;
    width: 100%;
  }
    .content {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 10%;
    }
    h1 {
        font-size: 1.5rem;
    }
</style>
