---
import Clipboard from "./Clipboard-Icon.astro";
---
<section id="Contacto">
  <h1>Contacto</h1>
  <p>
    danisntoss00@gmail.com <button> <Clipboard/>
    </button>
  </p>
  <div class="socials">
  <slot />
  </div>
</section>

<style>
  section {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 20px;
    width: 80%;
  }
  h1 {
    font-size: 5rem;
  }
  p {
    font-size: 1.5rem;
    width: 100%;
  }
  button {
    padding: 15px;
    background-color: transparent;
    border: none;
    cursor: pointer;
  }
  .socials {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 20px;
    margin-top: 20px;
  }
</style>
<script>
  function copiarCodigo() {
    navigator.clipboard.writeText("danisntoss00@gmail.com");
    console.log("Copiado");
  }
  document.querySelector("button").addEventListener("click", copiarCodigo);
</script>
